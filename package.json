{
	"name": "root",
	"private": true,
	"devDependencies": {
		"cypress": "^6.9.1",
		"cypress-dotenv": "^1.2.2",
		"dotenv": "^8.6.0",
		"http-server": "^0.12.3",
		"lerna": "^3.22.1",
		"start-server-and-test": "^1.12.5"
	},
	"scripts": {
		"build": "lerna run build --parallel",
		"cy:run": "cypress run",
		"cy:watch": "cypress open",
		"update:deps": "lerna run update:deps --parallel",
		"postinstall": "lerna bootstrap",
		"xpublish": "git push --follow-tags origin dev &&  git checkout prd && git merge dev && git push origin prd",
		"xrelease": "lerna publish --conventional-commits --force-publish --yes --no-verify-access",
		"start": "lerna run start & http-server -o",
		"test:e2e:watch": "start-server-and-test start http://localhost:8080 cy:watch",
		"test:e2e": "start-server-and-test start http://localhost:8080 cy:run",
		"test": "lerna run test --parallel"
	}
}
